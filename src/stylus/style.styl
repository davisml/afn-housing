@import 'nib'

/* Base Application Styles */
body
  color #000
  background white
  // background rgb(193, 23, 4);
  font-family Helvetica Neue, Helvetica, Arial, sans-serif
  font-size 16px
  text-align center
  margin 0px
  padding 0px

.sidebar
  position absolute
  top 0px
  left 0px
  right 0px
  height 120px
  text-align center
  display flex
  background rgb(193, 23, 4)
  color white

.sidebar-wrapper
  width 100%
  margin-left auto
  margin-right auto
  max-width 960px
  display flex
  flex-direction row
  align-items center
  padding-left 20px
  padding-right 20px

.content
  position absolute
  top 120px
  left 0px
  bottom 0px
  right 0px
  padding-top 15px
  overflow scroll

.sidebar img
  width 80px
  height @width

.sidebar h3
  display none
  padding 0px
  margin-bottom 0px

.sidebar h4 {
  margin: 0px;
  padding: 0px;
  margin-top: 5px;
  font-weight: 500;
  color: rgba(255,255,255,0.8);
  font-size: 18px;
}

.steps
  display flex
  flex 1
  flex-direction row
  align-items center
  color rgb(255, 246, 204)
  font-size 22px

.step
  margin-left 20px
  line-height 1

  &.active
    color rgb(253, 206, 8)

h1
  margin-top 0px
  margin-bottom 0px
  padding-bottom 20px
  color white
  font-size 28px

.btn
  display inline-block
  text-align center
  background linear-gradient(top, rgb(110, 110, 110), darken(rgb(110, 110, 110), 10%))
  border none
  text-shadow 0px 1px 0px rgba(0,0,0,0.1)
  color white
  font-smoothing antialiased
  border-radius 4px
  padding 8px 16px
  padding-top 10px
  font-size 22px
  font-weight 500
  margin-right 10px
  cursor pointer

.btn-default
  background linear-gradient(top, rgb(253, 155, 8), darken(rgb(253, 155, 8), 10%))
  color white
  border none
  text-shadow 0px 1px 0px rgba(0,0,0,0.1)
  
  &:hover:active
    background darken(rgb(253, 155, 8), 15%)

@import './form.styl'